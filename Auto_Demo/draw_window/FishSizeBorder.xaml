<Window x:Class="Auto_Demo.draw_window.FishSizeBorder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Auto_Demo.draw_window"
        mc:Ignorable="d" x:Name="win_Draw"
        Title="draw" Height="300" Width="300" Background="{x:Null}" AllowsTransparency="True" WindowStyle="None">
    <Grid>
        <Border HorizontalAlignment="Left" VerticalAlignment="Top" x:Name="drawLine" BorderBrush="#FFFFFFFF" Height="100" Width="100" BorderThickness="1">
            <TextBlock x:Name="tb_Size" Text="100" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FFFFFFFF" FontWeight="DemiBold" FontSize="9">
                <TextBlock.LayoutTransform>
                    <RotateTransform Angle="0"/>
                </TextBlock.LayoutTransform>
            </TextBlock>
        </Border>
    </Grid>
</Window>
