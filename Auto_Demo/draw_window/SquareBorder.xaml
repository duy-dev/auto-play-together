        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Auto_Demo.draw_window"
        mc:Ignorable="d" x:Name="win_Draw"
        Title="draw" Height="300" Width="300" Background="{x:Null}" AllowsTransparency="True" WindowStyle="None">
