                                        <Image Grid.Column="0" Margin="0" VerticalAlignment="Center" HorizontalAlignment="Left" Source="images/summary/money.png" Width="24" Height="auto"></Image>
                                        <Grid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>
                                                <RowDefinition></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" Text="số tiền bán cá" HorizontalAlignment="Right" Margin="0" Foreground="#FF7D7D85" FontSize="14"></TextBlock>
                                            <TextBlock x:Name="total_tienBanCa" Grid.Row="1" Text="235" HorizontalAlignment="Right" Margin="0" FontWeight="Bold" Foreground="#FF5CC353" FontSize="18"></TextBlock>
                                        </Grid>
                                    </Grid>
                                    <Border Grid.Column="1" Margin="0 10" BorderThickness="1" BorderBrush="#FF27272B" Width="1"></Border>
                                    <Grid Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                            <ColumnDefinition Width="110"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Image Grid.Column="0" Margin="0" VerticalAlignment="Center" HorizontalAlignment="Left" Source="images/summary/rod.png" Width="24" Height="auto"></Image>
                                        <Grid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>
                                                <RowDefinition></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" Text="chi phí sửa cần" HorizontalAlignment="Right" Margin="0" Foreground="#FF7D7D85" FontSize="14"></TextBlock>
                                            <TextBlock x:Name="total_tienSuaCan" Grid.Row="1" Text="235" HorizontalAlignment="Right" Margin="0" FontWeight="Bold" Foreground="#FF9D856F" FontSize="18"></TextBlock>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Border>
                            
                            <!--Thống kê cá theo level-->
                            <Grid Grid.Row="5" Margin="11 10 10 10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="thống kê cá theo level:" HorizontalAlignment="Left"  VerticalAlignment="Center" Foreground="#FF7D7D85" FontSize="14"></TextBlock>
                                <Grid Grid.Column="1" Margin="20 0 0 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Background="#FFE4E0C5" Padding="0 4" CornerRadius="4" Margin="4 0">
                                        <TextBlock x:Name="tb_TotalFish1" Text="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="#FF686658" FontSize="14"></TextBlock>
                                    </Border>
                                    <Border Grid.Column="1" Background="#FFA3E467" Padding="0 4" CornerRadius="4" Margin="4 0">
                                        <TextBlock x:Name="tb_TotalFish2" Text="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="#FF47642B" FontSize="14"></TextBlock>
                                    </Border>
                                    <Border Grid.Column="2" Background="#FF59C6D9" Padding="0 4" CornerRadius="4" Margin="4 0">
                                        <TextBlock x:Name="tb_TotalFish3" Text="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="#FF285B64" FontSize="14"></TextBlock>
                                    </Border>
                                    <Border Grid.Column="3" Background="#FFE793E8" Padding="0 4" CornerRadius="4" Margin="4 0">
                                        <TextBlock x:Name="tb_TotalFish4" Text="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="#FF6E466E" FontSize="14"></TextBlock>
                                    </Border>
                                </Grid>
                            </Grid>
                            
                            <!--Danh sách cá-->
                            <Grid Grid.Row="6" Margin="11 10 10 -10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="auto"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="danh sách cá câu được" HorizontalAlignment="Left"  VerticalAlignment="Center" Foreground="#FF7D7D85" FontSize="14"></TextBlock>
                                    <Grid Grid.Column="1" x:Name="paging_ListFish" HorizontalAlignment="Right">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Column="0" Margin="0 0 6 0" HorizontalAlignment="Right" MouseLeftButtonDown="sort_PrevPage" Background="#FF059669" Cursor="Hand" Height="26" Width="26" CornerRadius="6">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Opacity" Value="0.7"></Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="true">
                                                            <Setter Property="Opacity" Value="1"></Setter>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Image Margin="4 0 4 2" VerticalAlignment="Center" HorizontalAlignment="Left" Source="images/icon/back.png" Width="18" Height="18"></Image>
                                        </Border>
                                        <Border HorizontalAlignment="Center" Grid.Column="1" Width="50" Background="#1F1E25" CornerRadius="6"></Border>
                                        <TextBox GotFocus="startChangeSortPage" LostFocus="changeSortPage" PreviewTextInput="NumberValidationTextBox" Padding="6 4 6 7" x:Name="tb_pageSummaryFish" Grid.Column="1" Margin="0" Width="40" Text="" CaretBrush="#FF7D7D85" BorderThickness="0" Background="{x:Null}" FontSize="13" HorizontalAlignment="Center" 
                                            TextAlignment="Center" VerticalAlignment="Center" BorderBrush="{x:Null}" Foreground="#FF7D7D85">
                                        </TextBox>
                                        <Border Grid.Column="2" Margin="6 0 0 0" HorizontalAlignment="Right" MouseLeftButtonDown="sort_NextPage" Background="#FF059669" Cursor="Hand" Height="26" Width="26" CornerRadius="6">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Opacity" Value="0.7"></Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="true">
                                                            <Setter Property="Opacity" Value="1"></Setter>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Image Margin="4 0 4 2" VerticalAlignment="Center" HorizontalAlignment="Left" Source="images/icon/next.png" Width="18" Height="18"></Image>
                                        </Border>
                                    </Grid>
                                </Grid>
                                <Grid x:Name="action_Sort" Grid.Row="1" Margin="0 10 0 2" VerticalAlignment="Bottom">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"></ColumnDefinition>
                                        <ColumnDefinition Width="100"></ColumnDefinition>
                                        <ColumnDefinition Width="65"></ColumnDefinition>
                                        <ColumnDefinition Width="95"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0" Cursor="Hand" MouseLeftButtonDown="changeSortSTT" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Image Grid.Column="0" x:Name="sortDown_STT" Margin="0" Source="images/icon/sort_down.png" Width="10" Height="10"></Image>
                                        <Image Grid.Column="1" x:Name="sortUp_STT" Margin="0" Source="images/icon/sort_up.png" Width="10" Height="10"></Image>
                                    </Grid>
                                    <ComboBox x:Name="cb_SelectLevel" SelectionChanged="changeLevelSelect" SelectedIndex="0" HorizontalAlignment="Left" Height="30" Margin="0" Cursor="Hand" Grid.Column="1" VerticalAlignment="Top" Width="90" Template="{DynamicResource ComboBoxCustom}">
                                        <ComboBox.Style>
                                            <Style TargetType="ComboBox">
                                                <Setter Property="ItemContainerStyle" Value="{StaticResource ComboBoxItemCustom}"/>
                                            </Style>
                                        </ComboBox.Style>
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock VerticalAlignment="Center" Text="{Binding label}" Height="32" FontSize="14" Margin="8 0" Padding="0 5" Foreground="{Binding color}"></TextBlock>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <Grid Grid.Column="2" Cursor="Hand" Margin="6 0 0 0" MouseLeftButtonDown="changeSortMoney" HorizontalAlignment="Left" VerticalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Image Grid.Column="0" x:Name="sortDown_Money" Margin="0" Source="images/icon/sort_down.png" Width="10" Height="10"></Image>
                                        <Image Grid.Column="1" x:Name="sortUp_Money" Margin="0" Source="images/icon/sort_up.png" Width="10" Height="10"></Image>
                                    </Grid>
                                    <ComboBox x:Name="cb_SelectSize" SelectionChanged="changeSizeSelect" SelectedIndex="0" HorizontalAlignment="Left" Height="30" Margin="0" Cursor="Hand" Grid.Column="3" VerticalAlignment="Top" Width="90" Template="{DynamicResource ComboBoxCustom}">
                                        <ComboBox.Style>
                                            <Style TargetType="ComboBox">
                                                <Setter Property="ItemContainerStyle" Value="{StaticResource ComboBoxItemCustom}"/>
                                            </Style>
                                        </ComboBox.Style>
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock VerticalAlignment="Center" Text="{Binding label}" Height="32" FontSize="14" Margin="8 0" Padding="0 5" Foreground="#FF7D7D85"></TextBlock>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <Grid Grid.Column="4" Cursor="Hand" Margin="0 0 14 0" MouseLeftButtonDown="changeSortShadow" HorizontalAlignment="Right" VerticalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Image Grid.Column="0" x:Name="sortDown_Shadow" Margin="0" Source="images/icon/sort_down.png" Width="10" Height="10"></Image>
                                        <Image Grid.Column="1" x:Name="sortUp_Shadow" Margin="0" Source="images/icon/sort_up.png" Width="10" Height="10"></Image>
                                    </Grid>
                                </Grid>
                                <Border x:Name="notFoundSortData" Visibility="Hidden" Grid.Row="2" Margin="0 6 0 6" VerticalAlignment="Center" Height="40" Background="#FF1F1E25" CornerRadius="6">
                                    <TextBlock Grid.Column="0" Text="Không có dữ liệu..." HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 2" Foreground="#FF7D7D85" FontSize="14"></TextBlock>
                                </Border>
                                <ItemsControl x:Name="ic_SummaryFish" Grid.Row="2" Margin="0 0 0 8">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border VerticalAlignment="Center" BorderBrush="{Binding Path=colorBorder}" Background="{Binding Path=colorBackground}" CornerRadius="6" BorderThickness="2,0,0,0" Margin="0 4">
                                                <Grid VerticalAlignment="Center">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="40"></ColumnDefinition>
                                                        <ColumnDefinition Width="100"></ColumnDefinition>
                                                        <ColumnDefinition Width="80"></ColumnDefinition>
                                                        <ColumnDefinition Width="60"></ColumnDefinition>
                                                        <ColumnDefinition></ColumnDefinition>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="{Binding Path=stt}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" Foreground="#FF7D7D85" FontSize="14"></TextBlock>
                                                    <Image Grid.Column="1" Margin="0 6 6 6" VerticalAlignment="Center" HorizontalAlignment="Left" Source="{Binding Path=image}" Width="auto" Height="28"></Image>
                                                    <Image Grid.Column="1" Visibility="{Binding Path=isVM}" VerticalAlignment="Top" Margin="-4 0 0 0" HorizontalAlignment="Left" Source="images/icon/icon_crown_mini.png" Width="20" Height="auto"></Image>
                                                    <Grid Grid.Column="2">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Margin="4 0 4 0" FontSize="16" FontWeight="Bold" Text="{Binding Path=money}" Foreground="White"></TextBlock>
                                                        <Image Grid.Column="1" VerticalAlignment="Center" Margin="0 2 0 0" HorizontalAlignment="Left" Source="{Binding Path=iconMoney}" Width="20" Height="auto"/>
                                                    </Grid>
                                                    <TextBlock Grid.Column="3" Text="{Binding Path=sizeText}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0" Foreground="{Binding Path=colorBorder}" FontSize="16"></TextBlock>
                                                    <TextBlock Grid.Column="4" Text="{Binding Path=shadow}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="6 0 10 0" Foreground="#FF7D7D85" FontSize="16"></TextBlock>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                            <!--<Border Grid.Row="1" Width="200" Height="300" Background="#FFD0FF7F"></Border>
                            <Border Grid.Row="3" Width="200" Height="300" Background="#FFFFFF7F"></Border>-->
                        </Grid>
                    </ScrollViewer>
                    
                </Grid>
            </Border>
            <Grid Grid.Row="2" Margin="0 0 0 7">
                <TextBlock x:Name="notiStep" Visibility="Visible" Margin="12 0" FontSize="14" Text="Chưa chạy auto..." Foreground="White"></TextBlock>
                <Grid x:Name="fishingDone" Visibility="Hidden" Margin="12 0" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" VerticalAlignment="Center" FontSize="14" Text="Câu được " Foreground="White"></TextBlock>
                    <TextBlock x:Name="fishingDoneName" Grid.Column="1" VerticalAlignment="Center" Margin="5 0" FontSize="14" Text="Cá Thái Dương xanh" Foreground="#59C6D9"></TextBlock>
                    <Image x:Name="fishingDoneVM" Grid.Column="2" Visibility="Hidden" VerticalAlignment="Center" Margin="0" HorizontalAlignment="Left" Source="images/icon/icon_crown_mini.png" Width="20" Height="auto"></Image>
                    <TextBlock Grid.Column="3" VerticalAlignment="Center" Margin="6 0 0 0" FontSize="14" Text="giá " Foreground="White"></TextBlock>
                    <TextBlock x:Name="fishingDonePrice" Grid.Column="4" VerticalAlignment="Center" Margin="4 0 4 0" FontSize="16" FontWeight="Bold" Text="125" Foreground="White"></TextBlock>
                    <Image x:Name="fishingDoneMoney" Grid.Column="5" VerticalAlignment="Center" Margin="0 2 0 0" HorizontalAlignment="Left" Source="images/icon/icon_money_1.png" Width="20" Height="auto"/>
                    
                </Grid>
            </Grid>
        </Grid>
        <StackPanel Margin="200,370,18,18" Height="auto" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <ItemsControl x:Name="ic_Notification">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <userControl:notification Header="{Binding Path=title}" Contents="{Binding Path=content}" TypeMessage="{Binding Path=type, Mode=TwoWay}"></userControl:notification>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</Window>
